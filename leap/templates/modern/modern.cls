\newcommand{\myhref}[1]{%
  \begingroup
  \def\hyphen{-}%
  \edef\tmp{\expandafter\replace\expandafter{\hyphen}{#1}}
  \endgroup
  \href{\tmp}{\color{blue}{#1}}%
}
\newcommand{\replace}[2]{%
  \ifx#1#2\expandafter\@firstofone\else\expandafter\@gobble\fi
  {#2}%
  \expandafter\replace\expandafter{#1}%
}

